{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@icons": ["src/icons/index.ts"],
      "@layouts/*": ["src/layouts/*"],
      "@scripts/*": ["src/scripts/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"],
      "@config/*": ["src/config/*"],
      "@models/*": ["db/models/*"],
      "@utils/*": ["src/utils/*"],
      "@libs/*": ["src/libs/*"],
      "@db/*": ["db/*"],
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
