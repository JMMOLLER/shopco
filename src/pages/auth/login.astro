---
import Layout from "@layouts/Layout.astro";

if(Astro.locals.session) {
  return Astro.redirect("/");
}

---

<Layout title="Login">
  <div class="container mx-auto mb-5 max-w-96 border border-gray-300 p-5 rounded-lg">
    <h1 class="text-2xl text-center font-bold">Login</h1>
    <form class="flex flex-col gap-y-4 mt-5" action="/api/login" method="POST">
      <label class="inline-flex items-center gap-x-3" for="email">
        <span>Email:</span>
        <input class="input input-bordered grow" type="email" id="email" name="email" value="test@test.com" required />
      </label>
      <label class="inline-flex items-center gap-x-3" for="password"
        ><span>Password:</span>
        <input class="input input-bordered grow" type="password" id="password" name="password" value="admin123" required />
      </label>
      <button class="btn" type="submit">Login</button>
    </form>
    <p class="text-center mt-5">
      Don't have an account? <a class="text-cyan-600 underline hover:no-underline" href="/auth/signup">Sign up</a>
    </p>
  </div>
</Layout>
