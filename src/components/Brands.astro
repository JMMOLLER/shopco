---
import CalvinKleinLogo from "@icons/CalvinKleinLogo.astro";
import GucciLogo from "@icons/GucciLogo.astro";
import PradaLogo from "@icons/PradaLogo.astro";
import VersageLogo from "@icons/VersageLogo.astro";
import ZaraLogo from "@icons/ZaraLogo.astro";
---

<section aria-label="brands-heading" class="py-11 px-4 bg-black w-full inline-flex flex-wrap gap-8 items-center justify-around">
  <VersageLogo className="max-w-40 max-md:max-w-28" />
  <ZaraLogo className="max-w-[5.7rem] max-md:max-w-16" />
  <GucciLogo className="max-w-[9.7rem] max-md:max-w-[6.84rem]" />
  <PradaLogo className="max-w-48 max-md:max-w-32" />
  <CalvinKleinLogo className="max-w-52 max-md:max-w-[8.4rem]" />
</section>